{
    "name": "Antigravity Genesis (Golden Template)",
    "build": {
        "dockerfile": "../Dockerfile",
        "context": ".."
    },
    "remoteUser": "root",
    "containerUser": "root",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {
            "version": "latest",
            "moby": true
        },
        "ghcr.io/devcontainers/features/python:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "charliermarsh.ruff",
                "steveyegge.beads-extension"
            ]
        }
    },
    // Mapeia o Docker Socket para permitir o Gateway MCP no futuro
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
    ]
}